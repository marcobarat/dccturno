<core:FragmentDefinition
    controllerName="myapp.controller.ManagePianoGrey"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:t="sap.ui.table">
    <Dialog
        contentWidth="1200px"
        id="CausalizzazioneFermoPanel"
        >
        <customHeader>
            <Bar>
                <contentLeft>

                </contentLeft>
                <contentMiddle>
                    <Title text="Causalizzazione Fermi Automatici" />
                </contentMiddle>
                <contentRight>
                    <Button icon="sap-icon://decline" press="onCloseDialog">
                    </Button>
                </contentRight>
            </Bar>
        </customHeader>
                    <VBox height="100%" width="100%">
                        <VBox height="20%" width="100%">
                            <VBox width="100%">
                                <FlexBox alignItems="Start" justifyContent="Center">
                                    <Text text="{GeneralModel>/Intestazione/linea}" class="textTop"/>
                                </FlexBox>
                            </VBox>
                            <VBox width="100%">
                                <FlexBox alignItems="Start" justifyContent="Center">
                                    <Text text="{GeneralModel>/Intestazione/descrizione}" class="textTop"/>
                                    <Text text="***" class="textTopRed" visible="{= ${GeneralModel>/Intestazione/conforme} === false}"/>
                                </FlexBox>
                            </VBox>
                        </VBox>
                        <VBox height="80%" width="100%">
                            <VBox>
                                <!--<Panel>-->
                                <VBox>
                                    <HBox height="100%">
                                        <VBox width="15%"/>
                                        <VBox width="85%">
                                            <VBox height="40%">
                                                <HBox>
                                                    <VBox width="50%">
                                                        <Text text="{GeneralModel>/Fermo/Testi/titolo1}" class="customTextFermo"/>
                                                        <CheckBox id="CBFermo1" text="{GeneralModel>/Fermo/Testi/CBFermo1}" selected="{GeneralModel>/Fermo/Selezioni/CBFermo1}" select="ChangeCheckedFermo" />
                                                    </VBox>
                                                    <VBox width="50%">
                                                        <Text text="{GeneralModel>/Fermo/Testi/titolo2}" class="customTextFermo"/>
                                                        <CheckBox id="CBFermo2" text="{GeneralModel>/Fermo/Testi/CBFermo2}" selected="{GeneralModel>/Fermo/Selezioni/CBFermo2}" select="ChangeCheckedFermo" />
                                                        <CheckBox id="CBFermo3" text="{GeneralModel>/Fermo/Testi/CBFermo3}" selected="{GeneralModel>/Fermo/Selezioni/CBFermo3}" select="ChangeCheckedFermo" />
                                                    </VBox>
                                                </HBox>
                                            </VBox>
                                            <VBox height="60%">
                                                <HBox>
                                                    <VBox width="50%">
                                                        <Text text="{GeneralModel>/Fermo/Testi/titolo3}" class="customTextFermo"/>
                                                        <CheckBox id="CBFermo4" text="{GeneralModel>/Fermo/Testi/CBFermo4}" selected="{GeneralModel>/Fermo/Selezioni/CBFermo4}" select="ChangeCheckedFermo" />
                                                        <CheckBox id="CBFermo5" text="{GeneralModel>/Fermo/Testi/CBFermo5}" selected="{GeneralModel>/Fermo/Selezioni/CBFermo5}" select="ChangeCheckedFermo" />
                                                        <CheckBox id="CBFermo6" text="{GeneralModel>/Fermo/Testi/CBFermo6}" selected="{GeneralModel>/Fermo/Selezioni/CBFermo6}" select="ChangeCheckedFermo" />
                                                        <CheckBox id="CBFermo7" text="{GeneralModel>/Fermo/Testi/CBFermo7}" selected="{GeneralModel>/Fermo/Selezioni/CBFermo7}" select="ChangeCheckedFermo" />
                                                    </VBox>
                                                    <VBox width="50%">
                                                        <Text text="{GeneralModel>/Fermo/Testi/titolo4}" class="customTextFermo"/>
                                                        <CheckBox id="CBFermo8" text="{GeneralModel>/Fermo/Testi/CBFermo8}" selected="{GeneralModel>/Fermo/Selezioni/CBFermo8}" select="ChangeCheckedFermo" />
                                                        <CheckBox id="CBFermo9" text="{GeneralModel>/Fermo/Testi/CBFermo9}" selected="{GeneralModel>/Fermo/Selezioni/CBFermo9}" select="ChangeCheckedFermo" />
                                                        <CheckBox id="CBFermo10" text="{GeneralModel>/Fermo/Testi/CBFermo10}" selected="{GeneralModel>/Fermo/Selezioni/CBFermo10}" select="ChangeCheckedFermo" />
                                                    </VBox>
                                                </HBox>
                                            </VBox>
                                        </VBox>
                                    </HBox>
                                </VBox>
                                <!--</Panel>-->
                            </VBox>
                            <VBox height="10%">
                                <Text/>
                            </VBox>
                            <VBox height="10%">
                                <!--</Panel>-->
                                <Button id="ConfermaFermoCausalizzato"  class="confermaButton" text="Conferma" width="100%" enabled="false" press="onConfermaFermoCausalizzato"/>
                            </VBox>
                        </VBox>
                    </VBox>
    </Dialog>
</core:FragmentDefinition>
