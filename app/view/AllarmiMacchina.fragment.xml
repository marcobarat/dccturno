<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    xmlns:core="sap.ui.core"
    xmlns:u="sap.ui.unified"
    xmlns:wt="myapp.control" 
    controllerName="myapp.controller.OverviewLinea"
    xmlns:t="sap.ui.table">
    <Dialog contentWidth="80rem" contentHeight="40rem" horizontalScrolling="false" afterClose="DestroyDialog" verticalScrolling="true" showHeader="false" class="colorPage bordoBlu"  id="allarmiMacchina">
        <VBox height="100%" width="100%">
            <VBox height="36rem" width="100%">
                <VBox height="100%" width="100%">
                    <TabContainer id="allarmiContainer">
                        <items>    
                            <TabContainerItem name="Parametri" id="Parametri">
                                <content>
                                    <t:Table
                                        enableColumnReordering="false"
                                        class="fontTable labelTable"
                                        selectionMode="None"
                                        visibleRowCount="16"
                                        rows="{parametri>/}"
                                        id="parametriTable">
                                        <t:columns>
                                            <t:Column hAlign="Left" vAlign="Middle" width="45%">
                                                <Label text="Parametro" vAlign="Middle"/>
                                                <t:template>
                                                    <Text text="{parametri>parametro}" tooltip="{parametri>parametro}" maxLines="1"/>
                                                </t:template>
                                            </t:Column>
                                            <t:Column hAlign="Center" vAlign="Middle" width="40%">
                                                <Label text="Valore"/>
                                                <t:template>
                                                    <Text text="{parametri>valore}" tooltip="{parametri>valore}" maxLines="1"/>
                                                </t:template>
                                            </t:Column>
                                            <t:Column hAlign="Center" vAlign="Middle" width="15%">
                                                <Label text="Tag Kepware"/>
                                                <t:template>
                                                    <Text text="{parametri>tag}" tooltip="{parametri>tag}" maxLines="1"/>
                                                </t:template>
                                            </t:Column>
                                        </t:columns>
                                    </t:Table>
                                </content>
                            </TabContainerItem>                
                        </items>
                    </TabContainer>
                </VBox>
            </VBox>
            <VBox height="10%" width="100%">
                <HBox>
                    <VBox height="100%" width="30%"/>
                    <VBox height="100%" width="40%">
                        <Button text="Chiudi" width="100%" class="annullaButton" press="CloseDialog"></Button>
                    </VBox>
                    <VBox height="100%" width="30%"/>
                </HBox>
            </VBox>
        </VBox>
    </Dialog>
</core:FragmentDefinition>