<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:c="sap.ui.commons" xmlns="sap.m"
          xmlns:l="sap.ui.layout" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:t="sap.ui.table"
          controllerName="myapp.controller.ManagePiano">
    <Page title="{locale>myapp.view.main.title}">
        <headerContent>
            <Button icon="sap-icon://log" press="onAddPress" text="Uscita"
                    ariaLabelledBy="exitButtonLabel"    />
        </headerContent>
        <content>
            <Button text="Conferma"
                    press="nada"
                    ariaDescribedBy="defaultButtonDescription genericButtonDescription"
                    width="100%">
                <layoutData>
                    <FlexItemData growFactor="1" />
                </layoutData>
            </Button>
            <Table 
                inset="false" items="{path: 'linea>/linee'}" class="sapUiSmallMarginEnd">
                <headerToolbar>
                </headerToolbar>
                <columns>
                    <Column
                        width="12em">
                        <Text text="Linea" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <VBox width="100%" height="100%">
                                <HBox width="100%" height="35%" class="" alignItems="Start">
                                    <VBox width="20%" height="100%" class="">
                                        <Button text="{linea>linea}"
                                                press="onPress"
                                                ariaDescribedBy="defaultButtonDescription genericButtonDescription"
                                                width="100%"
                                                class="fix_b">
                                            <layoutData>
                                                <FlexItemData growFactor="1" />
                                            </layoutData>
                                        </Button>
                                        <Table 
                                            items="{path: 'operatore>/Operator'}"
                                            inset="false"
                                            growing="true"
                                            fixedLayout="false"
                                            growingThreshold="2"
                                            class="sapUiSmallMarginEnd">
                                            <columns>
                                                <Column>
                                                    <Text text="Operatori" />
                                                </Column>
                                            </columns>
                                            <items>
                                                <ColumnListItem >
                                                    <cells>
                                                        <Select items="{operatore>Operator}" >
                                                            <core:Item key="{operatore>nome}" text="{operatore>nome} {operatore>cognome}" />
                                                        </Select>
                                                    </cells>
                                                </ColumnListItem>
                                            </items>
                                        </Table>    

                                    </VBox>
                    
                                    <VBox width="80%" height="100%">
                                        <VBox height="20%" width="100%">
                                            <HBox>
                                                <VBox width="97%">
                                                    <ProgressIndicator
                                                        class="sapUiSmallMarginBottom largo"
                                                        percentValue="30"
                                                        displayValue="30%"
                                                        showValue="true"
                                                        state="None" />
                                                </VBox>
                                                <VBox width="3%">
                                                    <Button text=" "
                                                            press="onPress"
                                                            ariaDescribedBy="defaultButtonDescription genericButtonDescription"
                                                            width="100%">
                                                        <layoutData>
                                                            <FlexItemData growFactor="1" />
                                                        </layoutData>
                                                    </Button>
                                                </VBox>
                                            </HBox>
                                        </VBox>
                                        <VBox height="80%" width="100%">
                                            <Table 
                                                items="{linea>ProductCollection}"
                                                inset="false"
                                                growing="true"
                                                fixedLayout="false"
                                                growingThreshold="2"
                                                class="sapUiSmallMarginEnd">
                                                <columns>
                                                    <Column>
                                                        <Text text="" />
                                                    </Column>
                                                    <Column>
                                                        <Text text="Sequenza" />
                                                    </Column>
                                                    <Column>
                                                        <Text text="Formato" />
                                                    </Column>
                                                    <Column>
                                                        <Text text="Confezionamento" />
                                                    </Column>
                                                    <Column>
                                                        <Text text="" />
                                                    </Column>
                                                    <Column>
                                                        <Text text="Qli" />
                                                    </Column>
                                                    <Column>
                                                        <Text text="Cartoni" />
                                                    </Column>
                                                    <Column
                                                        hAlign="End">
                                                        <Text text="Ore" />
                                                    </Column>
                                                </columns>
                                                <items>
                                                    <ColumnListItem>
                                                        <cells>
                                                                <Button id="openMenu" text="" press="handlePressOpenMenu" />
                                                            <Text

                                                                text="{linea>seq}" />
                                                            <Select>
                                                                <core:Item key="semola" text="Semola 093" />
                                                            </Select>
                                                            <Select>
                                                                <core:Item key="500gr" text="500gr" />
                                                            </Select>
                                                            <Button text=""
                                                                    press="onPress2"
                                                                    ariaDescribedBy="defaultButtonDescription genericButtonDescription">
                                                            </Button>
                                                            <Text
                                                                text="{linea>qli}" />
                                                            <Text
                                                                text="{linea>cart}" />
                                                            <Text
                                                                text="{linea>ore}" />
                                                        </cells>
                                                    </ColumnListItem>
                                                </items>
                                            </Table>    
                                        </VBox>
                                    </VBox>       
                                </HBox>
                            </VBox>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
