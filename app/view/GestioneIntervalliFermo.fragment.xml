<core:FragmentDefinition
    controllerName="myapp.controller.ManagePianoGreen"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:t="sap.ui.table"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:cus="myapp.control">
    <Dialog
        showHeader="false"
        class="colorPage"
        contentWidth="1600px"
        contentHeight= "1000px"
        id="GestioneIntervalliFermo"
    >
            <VBox height="100%" width="100%">
                <VBox height="4%" width="100%"/>
                <VBox height="6%" width="100%">
                    <HBox>
                        <VBox height="100%" width="5%"/>
                        <HBox height="100%" width="20%"></HBox>                
                        <VBox height="100%" width="50%">
                            <VBox height="50%" width="100%" alignItems="Center">
                                <Text id="turno"/>
                            </VBox> 
                        </VBox>
                        <HBox height="100%" width="20%">
                            <VBox width="100%">
                                <Button text="Esci" press="onCloseDialog" class="paddingright" width="100%"/>
                            </VBox>
                        </HBox> 
                        <VBox height="100%" width="5%"/>
                    </HBox>
                </VBox>
                <VBox height="4%" width="100%"/>
                
                <VBox height="86%" width="100%">
                    <HBox>
                        <VBox height="100%" width="100%">
                            <Table
                                items="{guasti>/fermi}"
                                id="GuastiDiLineaTable"
                                class="alternateRowColors guastiFixedHeader"
                            >
                                <columns>
                                    <Column hAlign="Center" width="15%">
                                        <Label text="Inizio"/>
                                    </Column>
                                    <Column hAlign="Center" width="15%">
                                        <Label text="Fine"/>
                                    </Column>
                                    <Column hAlign="Center" width="15%">
                                        <Label text="Tempo"/>
                                    </Column>
                                    <Column hAlign="Center" width="45%">
                                        <Label text="Causale"/>
                                    </Column>
                                    <Column hAlign="Center" width="10%"/>
                                </columns>
                                <items>
                                    <ColumnListItem>
                                        <cells>
                                            <Text class="sapUiSmallMarginTop" text="{guasti>inizio}"/>
                                            <Text class="sapUiSmallMarginTop" text="{guasti>fine}"/>
                                            <Text class="sapUiSmallMarginTop" text="{guasti>intervallo}"/>
                                            <Text class="sapUiSmallMarginTop" text="{guasti>causale}"/>
                                            <Button press="OpenMenuCausalizzazione" icon="sap-icon://technical-object"/>
                                        </cells>
                                    </ColumnListItem> 
                                </items>   
                            </Table>                              
                        </VBox>
                    </HBox>
                </VBox>
            </VBox>
    </Dialog>
</core:FragmentDefinition>   
