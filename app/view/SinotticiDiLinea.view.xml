<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:c="sap.ui.commons" xmlns="sap.m"
          xmlns:l="sap.ui.layout" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:t="sap.ui.table"
          xmlns:cus="myapp.control"
          controllerName="myapp.controller.SinotticiDiLinea">
    <Page class="colorPage" showHeader="false">
        <content>
            <VBox height="100%" width="100%">
                <VBox height="5%" width="100%">
                    <HBox>
                        <VBox height="100%" width="5%"/>
                        <VBox height="100%" width="10%">
                            <Button text="Esci" width="100%" press="GoToHome" class="annullaButton"/>
                        </VBox>
                        <VBox height="100%" width="10%"/>
                        <VBox height="100%" width="75%">
                            <Text text="Fara San Martino - Reparto Confezionamento" class="customTextTitle"/>
                        </VBox>
                    </HBox>
                </VBox>
                <VBox height="5%" width="100%"/>
                <VBox height="90%" width="100%">
                    <HBox>
                        <VBox height="100%" width="5%"/>
                        <VBox height="100%" width="90%">
                            <TabContainer id="TabContainerSinotticiLinea" items="{sinotticiLinea>/linee}">
                                <items>
                                    <TabContainerItem name="{sinotticiLinea>linea}">
                                        <content>
                                            <Table items="{sinotticiLinea>macchine}">
                                                <columns>
                                                    <Column/>
                                                </columns>
                                                <items>
                                                    <ColumnListItem>
                                                        <cells>
                                                            <Table showNoData="false">
                                                                <columns>
                                                                    <Column>
                                                                        <Text text="{sinotticiLinea>nomeMacchina}"/>
                                                                    </Column>
                                                                </columns>
                                                            </Table>
                                                            <ScrollContainer>
                                                                <Table items="sinotticidilinea>tag">
                                                                    <columns>
                                                                        <Column/>
                                                                        <Column/>
                                                                    </columns>
                                                                    <items>
                                                                        <ColumnListItem>
                                                                            <cells>
                                                                                <Text text="{sinotticidilinea>nomeTag}"/>
                                                                            </cells>
                                                                        </ColumnListItem>
                                                                    </items>
                                                                </Table>
                                                            </ScrollContainer>
                                                        </cells>
                                                    </ColumnListItem>
                                                </items>
                                            </Table>
                                        </content>
                                    </TabContainerItem>
                                </items>
                            </TabContainer>
                        </VBox>
                        <VBox height="100%" width="5%"/> 
                    </HBox>
                </VBox>
            </VBox>
        </content>
    </Page>
</mvc:View>

