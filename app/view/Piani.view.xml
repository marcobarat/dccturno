<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:c="sap.ui.commons" xmlns="sap.m"
          xmlns:l="sap.ui.layout" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:t="sap.ui.table"
          xmlns:comp="myapp.control"
          controllerName="myapp.controller.Piani"
          id="Piani">
    <Page class="colorPage" showHeader="false">
        <content>
            <VBox height="100%" width="100%">
                <VBox height="5%" width="100%"/>
                <VBox height="10%" width="100%">
                    <HBox>
                        <VBox height="100%" width="24%"/>
                        <VBox height="100%" width="56%">
                            <Text text="Fara San Martino - Reparto Confezionamento" class="customTextTitle"/>
                        </VBox>
                        <VBox height="100%" width="8.8%"/>
                        <VBox height="100%" width="10%">
                            <Button text="Esci" width="100%" press="BackToMain"/>
                        </VBox>
                        <VBox height="100%" width="1.2%"/>
                    </HBox>
                </VBox>
                <VBox height="85%" width="100%">
                    <VBox height="100%" width="100%">
                        <HBox>
                            <VBox height="100%" width="12%"/>
                            <VBox height="100%" width="76%">
                                <VBox height="10%" width="100%">
                                    <Table width="100%" showNoData='false' class="totalWhiteTable tableTextSize blueText scrollingbarTransparent">
                                        <columns>
                                            <Column>
                                                <header>
                                                    <Text text="" />
                                                </header>
                                            </Column>
                                            <Column hAlign="Center">
                                                <header>
                                                    <Text text="Data"/>
                                                </header>
                                            </Column>
                                            <Column hAlign="Center">
                                                <header>
                                                    <Text text="Turno"/>
                                                </header>
                                            </Column>
                                            <Column hAlign="Center">
                                                <header>
                                                    <Text text="Q.li confezionati"/>
                                                </header>
                                            </Column>
                                            <Column hAlign="Center">
                                                <header>
                                                    <Text text="Q.li residui"/>
                                                </header>
                                            </Column>  
                                            <Column hAlign="Center">
                                                <header>
                                                    <Text text="LineeP"/>
                                                </header>
                                            </Column> 
                                            <Column hAlign="Center">
                                                <header>
                                                    <Text text="Turni"/>
                                                </header>
                                            </Column>                                             
                                        </columns>
                                    </Table>
                                </VBox>
                                <VBox height="5%" width="100%"/>
                                <VBox height="30%" width="100%" class="border grey">
                                    <ScrollContainer id="scrollTurniConclusi" height="187px" horizontal="false" vertical="true" class="scrollingbar">
                                        <Table 
                                            width="100%"
                                            class="tableTextSize noBorder"
                                            items="{path: 'turni>/pianidiconfezionamento/conclusi'}">
                                            <columns>
                                                <Column hAlign="Center">
                                                </Column>
                                                <Column hAlign="Center">
                                                </Column>
                                                <Column hAlign="Center">
                                                </Column>
                                                <Column hAlign="Center">
                                                </Column>
                                                <Column hAlign="Center">
                                                </Column>
                                                <Column hAlign="Center">
                                                </Column> 
                                                <Column hAlign="Center">
                                                </Column>                                         
                                            </columns>
                                            <items>
                                                <ColumnListItem>
                                                    <cells>
                                                        <core:Icon
                                                            src="{turni>icon}"
                                                            class="size4"
                                                            press="SwitcherTurni"
                                                            color="black" >
                                                        </core:Icon>
                                                        <comp:StyleTextTableAttr
                                                            text="{turni>data}" area="{turni>area}"/>
                                                        <comp:StyleTextTableAttr
                                                            text="{turni>turno}" />
                                                        <comp:StyleTextTableAttr
                                                            text="{turni>qliconf}"/>
                                                        <comp:StyleTextTableAttr
                                                            text="{turni>qliresidui}"/>
                                                        <comp:StyleTextTableAttr
                                                            text="{turni>lineep}"/>
                                                        <comp:StyleTextTableAttr
                                                            text="{turni>turni}"/>
                                                    </cells>
                                                </ColumnListItem>
                                            </items>
                                        </Table>
                                    </ScrollContainer>
                                </VBox>
                                <VBox height="5%" width="100%">
                                    <Text/>
                                </VBox>
                                <VBox height="10%" width="100%" class="border green  scrollingbarTransparent">
                                    <Table height="100%" width="100%" items='{turni>/pianidiconfezionamento/incorso}' class="tableTextSize">
                                        <columns>
                                            <Column hAlign="Center">
                                            </Column>
                                            <Column hAlign="Center">
                                            </Column>
                                            <Column hAlign="Center">
                                            </Column>
                                            <Column hAlign="Center">
                                            </Column>
                                            <Column hAlign="Center">
                                            </Column>
                                            <Column hAlign="Center">
                                            </Column> 
                                            <Column hAlign="Center">
                                            </Column>                                         
                                        </columns>
                                        <items>
                                            <ColumnListItem>
                                                <cells>
                                                    <core:Icon
                                                        src="{turni>icon}"
                                                        class="size4"
                                                        press="SwitcherTurni"
                                                        color="black" >
                                                    </core:Icon>
                                                    <comp:StyleTextTableAttr
                                                        text="{turni>data}" area="{turni>area}"/>
                                                    <comp:StyleTextTableAttr
                                                        text="{turni>turno}" />
                                                    <comp:StyleTextTableAttr
                                                        text="{turni>qliconf}"/>
                                                    <comp:StyleTextTableAttr
                                                        text="{turni>qliresidui}"/>
                                                    <comp:StyleTextTableAttr
                                                        text="{turni>lineep}"/>
                                                    <comp:StyleTextTableAttr
                                                        text="{turni>turni}"/>

                                                </cells>
                                            </ColumnListItem>
                                        </items>
                                    </Table>
                                </VBox>
                                <VBox height="5%" width="100%">
                                    <Text/>
                                </VBox>
                                <VBox height="30%" width="100%" class="border yellow">
                                    <ScrollContainer id="scrollTurniProgrammati" height="187px" horizontal="false" vertical="true" class="scrollingbar">
                                        <Table 
                                            width="100%"
                                            items="{path: 'turni>/pianidiconfezionamento/programmati'}"
                                            class="tableTextSize noBorder">
                                            <columns>
                                                <Column hAlign="Center">
                                                </Column>
                                                <Column hAlign="Center">
                                                </Column>
                                                <Column hAlign="Center">
                                                </Column>
                                                <Column hAlign="Center">
                                                </Column>
                                                <Column hAlign="Center">
                                                </Column>
                                                <Column hAlign="Center">
                                                </Column> 
                                                <Column hAlign="Center">
                                                </Column>                                         
                                            </columns>
                                            <items>
                                                <ColumnListItem>
                                                    <cells>
                                                        <core:Icon
                                                            src="{turni>icon}"
                                                            class="size4"
                                                            press="SwitcherTurni"
                                                            color="black" >
                                                        </core:Icon>
                                                        <comp:StyleTextTableAttr
                                                            text="{turni>data}" area="{turni>area}"/>
                                                        <comp:StyleTextTableAttr
                                                            text="{turni>turno}" />
                                                        <comp:StyleTextTableAttr
                                                            text="{turni>qliconf}"/>
                                                        <comp:StyleTextTableAttr
                                                            text="{turni>qliresidui}"/>
                                                        <comp:StyleTextTableAttr
                                                            text="{turni>lineep}"/>
                                                        <comp:StyleTextTableAttr
                                                            text="{turni>turni}"/>
                                                    </cells>
                                                </ColumnListItem>
                                            </items>
                                        </Table>
                                    </ScrollContainer>            
                                </VBox>
                                
                                
                                <VBox height="5%" width="100%">
                                    <Table width="100%" items="{turni>/pianidiconfezionamento/dacreare}" class="noBorder sapUiMediumMarginTop tableTextSize  scrollingbarTransparent"> 
                                        <columns>
                                            <Column hAlign="Center">
                                            </Column>
                                            <Column hAlign="Center">
                                            </Column>
                                            <Column hAlign="Center">
                                            </Column>
                                            <Column hAlign="Center">
                                            </Column>
                                            <Column hAlign="Center">
                                            </Column>
                                            <Column hAlign="Center">
                                            </Column> 
                                            <Column hAlign="Center">
                                            </Column>                                         
                                        </columns>
                                        <items>
                                            <ColumnListItem>
                                                <cells>
                                                    <core:Icon
                                                        src="sap-icon://feeder-arrow"
                                                        class="size4 noFocus"
                                                        press="SwitcherTurni"
                                                        color="black" >
                                                    </core:Icon>
                                                    <comp:StyleTextTableAttr text="{turni>data}" area="{turni>area}"/>
                                                    <comp:StyleTextTableAttr text="{turni>turno}"/>
                                                    <comp:StyleTextTableAttr text="{turni>qliconf}"/>
                                                    <comp:StyleTextTableAttr text="{turni>qliresidui}"/>
                                                    <comp:StyleTextTableAttr text="{turni>lineep}"/>
                                                    <comp:StyleTextTableAttr text="{turni>turni}"/>
                                                </cells>
                                            </ColumnListItem>
                                        </items>
                                    </Table>
                                </VBox>
                            </VBox>
                            <VBox height="100%" width="12%"/>
                        </HBox>     
                    </VBox>    
                </VBox>
            </VBox>
        </content>
    </Page>
</mvc:View>
