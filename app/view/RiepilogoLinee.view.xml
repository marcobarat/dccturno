<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:c="sap.ui.commons" xmlns="sap.m"
          xmlns:l="sap.ui.layout" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:t="sap.ui.table"
          xmlns:cus="myapp.control"
          controllerName="myapp.controller.RiepilogoLinee">
    <Page class="colorPage" showHeader="false">
        <content>
            <VBox height="100%" width="100%">
                <VBox height="5%" width="100%">
                    <HBox>
                        <VBox height="100%" width="5%"/>
                        <VBox height="100%" width="10%">
                            <Button text="Esci" width="100%" press="GoToHome" class="annullaButton"/>
                        </VBox>
                        <VBox height="100%" width="10%"/>
                        <VBox height="100%" width="75%">
                            <Text text="Fara San Martino - Reparto Confezionamento" class="customTextTitle"/>
                        </VBox>
                    </HBox>
                </VBox>
                <VBox height="5%" width="100%"/>
                <VBox height="90%" width="100%">
                    <HBox>
                        <VBox height="100%" width="5%"/>
                        <VBox height="100%" width="90%">
                            <ScrollContainer width="100%" height="100%">
                                <HBox width="100%" height="100%">
                                    <VBox width="50%">
                                        <Table items="{linee>/linee/PastaLunga}" width="100%">
                                            <columns>
                                                <Column/>
                                            </columns>
                                            <items>
                                                <ColumnListItem class="noDelimitator">
                                                    <cells>
                                                        <HBox class="sapUiTinyMargin RiepilogoLineaElement">
                                                            <VBox width="30%" height="100%">
                                                                <VBox height="30%" width="100%" class="paddingVBox">
                                                                    <cus:CustomButt width="100%"
                                                                                    text="{linee>linea}"
                                                                                    class="noFocus"
                                                                                    state="{linee>statolinea}"
                                                                                    customType="linea"
                                                                                    press="GoToSinotticoLinea">
                                                                
                                                                    </cus:CustomButt>
                                                                </VBox>
                                                                <HBox height="">
                                                                    <VBox width="50%" class="BorderTopRight paddingVBox textVBox"> 
                                                                        <Text text="{linee>disponibilita}"/>
                                                                    </VBox>
                                                                    <VBox width="50%" class="BorderTop paddingVBox textVBox">
                                                                        <Text text="{linee>efficienza}"/>
                                                                    </VBox>
                                                                </HBox>
                                                            </VBox>
                                                            <VBox width="70%" height="100%">
                                                                <HBox height="30%" width="100%" class="paddingVBox">
                                                                    <VBox width="80%">
                                                                        <cus:NewProgressIndicator
                                                                            class="LineeMPI"
                                                                            width="100%"
                                                                            displayValue="{linee>oreRimanenti}"
                                                                            percentValue="{= Number(${linee>avanzamento})}"
                                                                            barColor="{linee>barColor}"
                                                                        >
                                                                        </cus:NewProgressIndicator>
                                                                    </VBox>
                                                                    <VBox  width="20%" class="sapUiTinyMarginBegin">
                                                                        <cus:CustomButt width="80%"
                                                                                        icon="img/triangoloprova.png"
                                                                                        text="4"
                                                                                        press="onPress"
                                                                                        ariaDescribedBy="defaultButtonDescription genericButtonDescription"
                                                                                        customType="graficoSPC"
                                                                                        state="1"
                                                                                        class="sapUiSmallMarginBegin monobuttonSPC noFocus">
                                                                        </cus:CustomButt>
                                                                    </VBox>
                                                                </HBox>
                                                                <HBox>
                                                                    <VBox width="20%" height="100%" class="BorderLeftTopRight paddingVBox textVBox">
                                                                        <Text text="{linee>cniconf}"/>
                                                                    </VBox>
                                                                    <VBox width="60%" class="BorderTopRight paddingVBox textVBox">
                                                                        <Text text="{linee>batchLavorazione}"/>
                                                                    </VBox>
                                                                    <VBox width="20%" class="BorderTop paddingVBox textVBox">
                                                                        <Text text="{linee>cniresidui}"></Text>
                                                                    </VBox>
                                                                </HBox>
                                                            </VBox> 
                                                        </HBox>
                                                    </cells>
                                                </ColumnListItem>
                                            </items>
                                        </Table>
                                    </VBox>
                                    <VBox width="50%">
                                        <Table items="{linee>/linee/PastaCorta}" width="100%">
                                            <columns>
                                                <Column/>
                                            </columns>
                                            <items>
                                                <ColumnListItem class="noDelimitator">
                                                    <cells>
                                                        <HBox class="sapUiTinyMargin RiepilogoLineaElement">
                                                            <VBox width="30%" height="100%">
                                                                <VBox height="30%" width="100%" class="paddingVBox">
                                                                    <cus:CustomButt width="100%"
                                                                                    text="{linee>linea}"
                                                                                    class="noFocus"
                                                                                    state="{linee>statolinea}"
                                                                                    customType="linea"
                                                                                    press="GoToSinotticoLinea">
                                                                
                                                                    </cus:CustomButt>
                                                                </VBox>
                                                                <HBox height="">
                                                                    <VBox width="50%" class="BorderTopRight paddingVBox textVBox"> 
                                                                        <Text text="{linee>disponibilita}"/>
                                                                    </VBox>
                                                                    <VBox width="50%" class="BorderTop paddingVBox textVBox">
                                                                        <Text text="{linee>efficienza}"/>
                                                                    </VBox>
                                                                </HBox>
                                                            </VBox>
                                                            <VBox width="70%" height="100%">
                                                                <HBox height="30%" width="100%" class="paddingVBox">
                                                                    <VBox width="80%">
                                                                        <cus:NewProgressIndicator
                                                                            class="LineeMPI"
                                                                            width="100%"
                                                                            displayValue="{linee>oreRimanenti}"
                                                                            percentValue="{= Number(${linee>avanzamento})}"
                                                                            barColor="{linee>barColor}"
                                                                        >
                                                                        </cus:NewProgressIndicator>
                                                                    </VBox>
                                                                    <VBox  width="20%" class="sapUiTinyMarginBegin">
                                                                        <cus:CustomButt width="80%"
                                                                                        icon="img/triangoloprova.png"
                                                                                        text="4"
                                                                                        press="onPress"
                                                                                        ariaDescribedBy="defaultButtonDescription genericButtonDescription"
                                                                                        customType="graficoSPC"
                                                                                        state="1"
                                                                                        class="sapUiSmallMarginBegin monobuttonSPC noFocus">
                                                                        </cus:CustomButt>
                                                                    </VBox>
                                                                </HBox>
                                                                <HBox>
                                                                    <VBox width="20%" height="100%" class="BorderLeftTopRight paddingVBox textVBox">
                                                                        <Text text="{linee>cniconf}"/>
                                                                    </VBox>
                                                                    <VBox width="60%" class="BorderTopRight paddingVBox textVBox">
                                                                        <Text text="{linee>batchLavorazione}"/>
                                                                    </VBox>
                                                                    <VBox width="20%" class="BorderTop paddingVBox textVBox">
                                                                        <Text text="{linee>cniresidui}"></Text>
                                                                    </VBox>
                                                                </HBox>
                                                            </VBox> 
                                                        </HBox>
                                                    </cells>
                                                </ColumnListItem>
                                            </items>
                                        </Table>
                                    </VBox>
                                </HBox>
                            </ScrollContainer>
                        </VBox>
                        <VBox height="100%" width="5%"/> 
                    </HBox>
                </VBox>
            </VBox>
        </content>
    </Page>
</mvc:View>
