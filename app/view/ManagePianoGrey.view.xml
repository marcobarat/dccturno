<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:c="sap.ui.commons" xmlns="sap.m"
          xmlns:l="sap.ui.layout" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:t="sap.ui.table"
          xmlns:cus="myapp.control"
          controllerName="myapp.controller.ManagePianoGrey"
          id="ManagePianoGrey">
    <Page id="managePianoGrey" class="colorPage" showHeader="false">
        <content>
            <VBox height="100%" width="100%">
                <VBox height="5%" width="100%"/>
                <VBox height="10%" width="100%">
                    <HBox>
                        <VBox height="100%" width="5%"/>
                        <HBox height="100%" width="20%">
                            <!--<VBox width="1rem"/>-->
                            <HBox>

                                <Button text="Creazione report OEE"
                                        press="onReport"
                                        ariaDescribedBy="defaultButtonDescription genericButtonDescription"
                                        class="noFocus paddingleft">
                                </Button>
                                <Button 
                                    id="reportButton"
                                    class="noFocus" 
                                    text="Report"
                                    visible="true"
                                    enabled="false"
                                    press="onReportView"
                                    ariaDescribedBy="defaultButtonDescription genericButtonDescription"
                                >
                                </Button>  
                            </HBox>    
                        </HBox>                  
                        <!--<VBox height="100%"/>-->
                        
                        <VBox height="100%" width="50%">
                            <VBox height="50%" width="100%" alignItems="Center">
                                <Text id="ReportTitle"/>
                            </VBox> 
                        </VBox>




                        <!--<VBox height="100%"/>-->
                        <HBox height="100%" width="20%">
                            <HBox width="100%" justifyContent="End">
                                <Button text="Conferma chiusura piano"
                                        press="onChiusuraPiano"
                                        ariaDescribedBy="defaultButtonDescription genericButtonDescription"
                                        class="noFocus">
                                </Button>
                                <Button text="Esci" press="onNavBack" class="noFocus paddingright"/>
                            </HBox> 
                            <!--<VBox width="1rem"/>-->  
                        </HBox> 
                        <VBox height="100%" width="5%"/>
                    </HBox>
                </VBox>
                
                <VBox height="80%" width="100%">
                    <HBox>
                        <VBox height="100%" width="5%"/>
                        <VBox height="100%" width="90%">
                            <IconTabBar
                                id="ManageIconTabBar"
                                select="changeReparto"
                                applyContentPadding="true"
                                expandable="false"
                                items="{reparti>/ListaReparti}"
                                selectedKey="1"
                            >
                                <items>
                                    <IconTabFilter
                                        text="{reparti>Reparto}"
                                        key="{reparti>RepartoID}">
                                    </IconTabFilter>                  
                                </items>
                                <content>
                                    <Table 
                                        inset="false" 
                                        items="{path: 'linea>/linee'}" 
                                        class="sapUiSmallMarginEnd"
                                        id="ManagePianoTableGrey">
                                        <headerToolbar>
                                        </headerToolbar>
                                        <columns>
                                            <Column
                                                width="12em">
                                            </Column>
                                        </columns>
                                        <items>
                                            <ColumnListItem class="noDelimitator noFocus">
                                                <cells>
                                                    <VBox width="100%" height="100%" class="sfondobianco">
                                                        <HBox height="35%">
                                                            <VBox width="78%">
                                                                <Text text="{linea>linea}"
                                                                      width="50%"
                                                                      class="fix_linea">
                                                                </Text>                                        
                                                            </VBox>
                                                            <HBox width="22%" class="mysapMInputBaseWidthPadding FermoButton">
                                                                <VBox alignItems="Center" width="27.5%"/>
                                                                <VBox alignItems="Center" width="27.5%"/>
                                                                <VBox width="45%"/>                                  
                                                            </HBox>

                                                        </HBox>
                                                        <HBox height="65%" width="100%">
                                                            <VBox width="100%">
                                                                <Table 
                                                                    items="{linea>batchlist}"
                                                                    inset="false"
                                                                    growing="true"
                                                                    fixedLayout="false"
                                                                    growingThreshold="2"
                                                                    class="sapUiSmallMarginEnd"
                                                                >
                                                                    <columns class="mysapMListTbl">
                                                                        <Column
                                                                            vAlign="Middle"
                                                                            hAlign="Center">
                                                                            <Text text="Sequenza" />
                                                                        </Column>
                                                                        <Column
                                                                            vAlign="Middle"
                                                                            hAlign="Center"
                                                                        >
                                                                            <Text text="Formato" />
                                                                        </Column>
                                                                        <Column
                                                                            vAlign="Middle"
                                                                            hAlign="Center">
                                                                            <Text text="Confezionamento" />
                                                                        </Column>
                                                                        <Column
                                                                        >
                                                                            <Text text="" />
                                                                        </Column>
                                                                        <Column
                                                                            vAlign="Middle"
                                                                            hAlign="Center">
                                                                            <Text text="Qli" />
                                                                        </Column>
                                                                        <Column
                                                                            vAlign="Middle"
                                                                            hAlign="Center">
                                                                            <Text text="Cartoni" />
                                                                        </Column>
                                                                        <Column
                                                                            vAlign="Middle"
                                                                            hAlign="Center">
                                                                            <Text text="Ore" />
                                                                        </Column>
                                                                    </columns>
                                                                    <items>
                                                                        <ColumnListItem class="sapMListTblCell_b">
                                                                            <cells>
                                                                                <Text text="{linea>sequenza}" />
                                                                                <Text text="{linea>formatoProduttivo}" />
                                                                                <Text text="{= ${linea>confezione} + ' ' + ${linea>grammatura} + 'gr'}" />
                                                                                <cus:CustomButt text=""
                                                                                                press="onPress"
                                                                                                type="batch"
                                                                                                value="2">
                                                                                </cus:CustomButt>
                                                                                <Text
                                                                                    text="{linea>qli}" />
                                                                                <Text
                                                                                    text="{linea>cartoni}" />
                                                                                <Text
                                                                                    text="{linea>ore}" />
                                                                            </cells>
                                                                        </ColumnListItem>
                                                                    </items>
                                                                </Table>
                                                            </VBox>
                                                        </HBox>
                                                    </VBox>
                                                </cells>
                                            </ColumnListItem>
                                        </items>
                                    </Table>
                                </content>
                            </IconTabBar>                        
                        </VBox>
                        <VBox height="100%" width="5%"/> 
                    </HBox>
                </VBox>
            </VBox>
        </content>
        
        
    </Page>
</mvc:View>