<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:c="sap.ui.commons" xmlns="sap.m"
          xmlns:l="sap.ui.layout" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:t="sap.ui.table"
          xmlns:cus="myapp.control"
          controllerName="myapp.controller.ManagePianoGrey"
          id="ManagePianoGrey">
    <Page title="Reportistica Da Effettuare" id="managePianoGrey">
        <headerContent>
            <Button icon="sap-icon://log" press="onAddPress" text="Uscita"
                    ariaLabelledBy="exitButtonLabel"    />
        </headerContent>
        <content id="contentTab">
            <HBox>
                <VBox width="30%" class="sapUiSmallMargin">
                    <Button text="Creazione Report OEE"
                            press="onReport"
                            ariaDescribedBy="defaultButtonDescription genericButtonDescription"
                            width="100%"
                            type="Accept">
                            <layoutData>
                                <FlexItemData growFactor="1" />
                            </layoutData>
                    </Button>
                </VBox>
                <VBox width="30%" class="sapUiSmallMargin">
                    <Button 
                        id="reportButton" 
                        text="Report"
                        visible="false"
                        press="onReportView"
                        ariaDescribedBy="defaultButtonDescription genericButtonDescription"
                        width="100%">
                        <layoutData>
                            <FlexItemData growFactor="1" />
                        </layoutData>
                    </Button>                        
                </VBox>
                <VBox width="30%" class="sapUiSmallMargin">
                    <Button 
                        id="confermaButton" 
                        text="Conferma chiusura piano"
                        visible="false"
                        press="onConfermaChiusuraPiano"
                        ariaDescribedBy="defaultButtonDescription genericButtonDescription"
                        width="100%">
                        <layoutData>
                            <FlexItemData growFactor="1" />
                        </layoutData>
                    </Button>                        
                </VBox>       

            </HBox>
            
           
            <Table 
                inset="false" 
                items="{path: 'linea>/linee'}" 
                class="sapUiSmallMarginEnd"
                id="ManagePianoTable">
                <headerToolbar>
                </headerToolbar>
                <columns>
                    <Column
                        width="12em">
                        <Text text="Linea" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                             <VBox width="100%" height="100%" class="sfondobianco">
                                <HBox height="35%">
                                    <VBox width="80%">
                                        <Text text="{linea>linea}"
                                                width="50%"
                                                class="fix_linea">
                                        </Text>                                        
                                    </VBox>
                                    <HBox width="20%" class="mysapMInputBaseWidthPadding FermoButton">
                                        <VBox/>                                  
                                    </HBox>

                                </HBox>
                                <HBox height="65%" width="100%">
                                    <VBox width="100%">
                                            <Table 
                                                items="{linea>ProductCollection}"
                                                inset="false"
                                                growing="true"
                                                fixedLayout="false"
                                                growingThreshold="2"
                                                class="sapUiSmallMarginEnd"
                                                >
                                                <columns class="mysapMListTbl">
                                                    <Column
                                                        >
                                                        <Text text="Sequenza" />
                                                    </Column>
                                                    <Column
                                                        >
                                                        <Text text="Formato" />
                                                    </Column>
                                                    <Column
                                                        >
                                                        <Text text="Confezionamento" />
                                                    </Column>
                                                    <Column
                                                        >
                                                        <Text text="" />
                                                    </Column>
                                                    <Column
                                                        >
                                                        <Text text="Qli" />
                                                    </Column>
                                                    <Column
                                                        >
                                                        <Text text="Cartoni" />
                                                    </Column>
                                                    <Column
                                                        hAlign="End">
                                                        <Text text="Ore" />
                                                    </Column>
                                                </columns>
                                                <items>
                                                    <ColumnListItem>
                                                        <cells>
                                                            <Text

                                                                text="{linea>seq}" />
                                                            <Select>
                                                                <core:Item key="semola" text="Semola 093" />
                                                            </Select>
                                                            <Select>
                                                                <core:Item key="500gr" text="500gr" />
                                                            </Select>
                                                            <cus:CustomButt text=""
                                                                            press="onPress"
                                                                            
                                                                            value="2">
                                                            </cus:CustomButt>
                                                            <Text
                                                                text="{linea>qli}" />
                                                            <Text
                                                                text="{linea>cart}" />
                                                            <Text
                                                                text="{linea>ore}" />
                                                        </cells>
                                                    </ColumnListItem>
                                                </items>
                                            </Table>
                                    </VBox>
                                </HBox>
                             </VBox>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
