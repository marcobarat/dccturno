<core:FragmentDefinition
    controllerName="myapp.controller.ManagePiano"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:t="sap.ui.table">
    <Dialog
        showHeader="false"
        class="colorPage"
        contentWidth="600px"
        id="CreazioneBatch"
    >
        <VBox class="sapUiMediumMargin">
            <HBox width="50%">
                <VBox width="50%">
                    <Text text="Sequenza"/>
                </VBox>
                <Input width= "7rem" id="sequenza" type="Number"></Input>
            </HBox>
            <HBox width="50%">
                <VBox width="50%">
                    <Text text="Formato"/>
                </VBox>
                <ComboBox id="formato" width="7rem"  loadItems="CaricaFormati" selectionChange="ResetConfezionamenti"></ComboBox>
            </HBox>
            <HBox width="50%">
                <VBox width="50%">
                    <Text text="Confezionamento"/>
                </VBox>
                <ComboBox id="confezionamento" width= "7rem" loadItems="CaricaConfezionamenti"></ComboBox>
            </HBox>
            <HBox width="50%">
                <VBox width="50%">
                    <Text text="Qli"/>
                </VBox>
                <Input width= "7rem" id="quintali" type="Number"></Input>
            </HBox>
            <HBox width="50%">
                <VBox width="50%">
                    <Text text="Cartoni"/>
                </VBox>
                <Input width= "7rem" id="cartoni" type="Number"></Input>
            </HBox>
            <HBox width="50%">
                <VBox width="50%">
                    <Text text="Ore"/>
                </VBox>
                <TimePicker id="ore"                 
                            value=""
                            valueFormat= "HH:mm"
                            width= "7rem"
                            displayFormat= "HH:mm">
                </TimePicker>
            </HBox>
            <HBox>
                <Button id="AnnullaCreazione" press="destroyDialog" text="Annulla"></Button>
                <Button id="ConfermaCreazione" press="confermaCreazioneBatch" text="Conferma"></Button>
            </HBox>
        </VBox>
    </Dialog>
</core:FragmentDefinition>
