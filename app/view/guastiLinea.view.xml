<mvc:View
    controllerName="myapp.controller.guastiLinea"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:t="sap.ui.table"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:cus="myapp.control">
    <Page showHeader="false" class="colorPage"> 
        <content>
            <VBox height="100%" width="100%">
                <!--                <VBox height="5%" width="100%"/>
                <VBox height="10%" width="100%">
                    <HBox>
                        <VBox height="100%" width="6.2%"/>
                        <VBox height="100%" width="13.8%"/>
                        <VBox height="100%" width="40%">
                            <VBox height="50%" width="100%">
                                <Text id="turno"/>
                            </VBox>
                            <VBox height="50%" width="100%">
                                <Text text="{guasti>/nome}" class="customText" />
                            </VBox>
                        </VBox>
                        <VBox height="100%" width="10%"/>
                        <VBox height="100%" width="13.8%">
                            <Button text="Close" width="100%" class="annullaButton" press="onReturnToReport"></Button>
                        </VBox>
                        <VBox height="100%" width="6.2%"/>
                    </HBox>
                </VBox>
                <VBox height="5%" width="100%"/>-->
                
                <VBox height="4%" width="100%"/>
                <VBox height="6%" width="100%">
                    <HBox>
                        <VBox height="100%" width="5%"/>
                        <HBox height="100%" width="20%"></HBox>                
                        <VBox height="100%" width="50%">
                            <VBox height="50%" width="100%" alignItems="Center">
                                <Text id="turno"/>
                            </VBox> 
                        </VBox>
                        <HBox height="100%" width="20%">
                            <VBox width="100%">
                                <Button text="Esci" press="onReturnToReport" class="paddingright" width="100%"/>
                            </VBox>
                        </HBox> 
                        <VBox height="100%" width="5%"/>
                    </HBox>
                </VBox>
                <VBox height="4%" width="100%"/>
                
                <VBox height="86%" width="100%">
                    <HBox>
                        <!--<VBox height="100%" width="5%"/>-->
                        <VBox height="100%" width="100%">
                            <Table
                                items="{guasti>/fermi}"
                                id="GuastiDiLineaTable"
                                class="alternateRowColors guastiFixedHeader"
                            >
                                <columns>
                                    <Column hAlign="Center" width="15%">
                                        <Label text="Inizio"/>
                                    </Column>
                                    <Column hAlign="Center" width="15%">
                                        <Label text="Fine"/>
                                    </Column>
                                    <Column hAlign="Center" width="15%">
                                        <Label text="Tempo"/>
                                    </Column>
                                    <Column hAlign="Center" width="45%">
                                        <Label text="Causale"/>
                                    </Column>
                                    <Column hAlign="Center" width="10%"/>
                                </columns>
                                <items>
                                    <ColumnListItem>
                                        <cells>
                                            <Text class="sapUiSmallMarginTop" text="{guasti>inizio}"/>
                                            <Text class="sapUiSmallMarginTop" text="{guasti>fine}"/>
                                            <Text class="sapUiSmallMarginTop" text="{guasti>intervallo}"/>
                                            <Text class="sapUiSmallMarginTop" text="{guasti>causa}"/>
                                            <Button press="handlePressOpenMenuCausalizzazione" icon="sap-icon://technical-object"/>
                                        </cells>
                                    </ColumnListItem> 
                                </items>   
                            </Table>                              
                        </VBox>
                        <!--<VBox height="100%" width="5%"/>--> 
                    </HBox>
                </VBox>
            </VBox>
        </content>
    </Page>
</mvc:View>        