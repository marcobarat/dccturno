<core:FragmentDefinition
    controllerName="myapp.controller.ManagePianoGrey"
    id="CausalizzazioneFermoFragment"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:t="sap.ui.table">
    <Dialog
        contentWidth="1200px"
        id="CausalizzazioneFermo"
        title="Causalizzazione Fermi Automatici">
        <HBox width="100%">
            <VBox width="5%"/>
            <VBox width="35%" justifyContent="Center">
                <Button width="100%" text="Esci" class="annullaButton" press="onCloseDialog"/>
            </VBox>
            <VBox width="20%"/>
            <VBox width="35%">
                <Button width="100%" enabled="false" text="Causalizza" press="onCausalizzaButton" class="confermaButton"/>
            </VBox>
            <VBox width="5%"/>
        </HBox>
        <VBox id="vbox_table" height="40%">
                                    <TextArea id="NoFermiDaCausalizzare" width="100%" value="Non esistono fermi automatici da causalizzare" textAlign="Center" editable="false" visible="false"></TextArea>
                                    <Table
                                        class="mysapMTable"
                                        id="TotaleTable"
                                        >
                                        <columns>
                                            <Column width="29.5%" hAlign="Center">
                                            </Column>
                                            <Column width="15%" hAlign="Center">
                                                <Text text="Tempo"/>                                                       
                                            </Column>
                                            <Column width="44.5%" hAlign="Center">
                                                <Text text="Causale"/>
                                            </Column>
                                            <Column width="11%" hAlign="Center">
                                            </Column>
                                        </columns>
                                        <items>
                                            <ColumnListItem class="mysapMListTblCell mysapMText mysapMCb">
                                                <cells>
                                                    <Text textAlign="Center" text="Totale Complessivo"/>
                                                    <Text text="{guastilinea>/NoCause/Totale/tempoGuastoTotale}"/>
                                                    <Text text="{guastilinea>/NoCause/Totale/causaleTotale}"/>
                                                    <CheckBox textAlign="Center" id="CBTotaleCausa" selected="false" select="ChangeCheckedCausa" class="CBTotaleCausaCustom sapUiTinyMarginBegin"/>
                
                                                                          
                                                </cells>
                                            </ColumnListItem>
                                        </items>
                                    </Table>
        </VBox>        
        <VBox>
                                    <t:Table
                                        id="GuastiTable"
                                        visibleRowCount="5"
                                        class="alternate-color"
                                        selectionMode="None"
                                        rows="{guastilinea>/NoCause/guasti}">
                                        <t:columns>
                                            <t:Column hAlign="Center" width="15%">
                                                <Label text="Inizio"/>
                                                <t:template>
                                                    <Text text="{guastilinea>inizio}"/>
                                                </t:template>
                                            </t:Column>
                                            <t:Column hAlign="Center" width="15%">
                                                <Label text="Fine"/>
                                                <t:template>
                                                    <Text text="{guastilinea>fine}"/>
                                                </t:template>
                                            </t:Column>
                                            <t:Column hAlign="Center" width="15%">
                                                <Label text="Tempo"/>
                                                <t:template>
                                                    <Text text="{guastilinea>intervallo}"/>
                                                </t:template>
                                            </t:Column>
                                            <t:Column hAlign="Center" width="45%">
                                                <Label text="Causale"/>
                                                <t:template>
                                                    <Text text="{guastilinea>causa}"/>
                                                </t:template>
                                            </t:Column>
                                            <t:Column hAlign="Center" width="10%">
                                                <t:template>
                                                    <CheckBox id="CBSingoloCausa" class="sapUiSmallMarginBegin" selected="{guastilinea>selected}" select="ChangeCheckedCausa"/>
                                                </t:template>
                                            </t:Column>
                                        </t:columns>
                                    </t:Table>
        </VBox>
    </Dialog>
</core:FragmentDefinition>
