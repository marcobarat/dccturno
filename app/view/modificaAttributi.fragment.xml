<core:FragmentDefinition
    id="modificaAttributi"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:u="sap.ui.unified"
    xmlns:wt="myapp.control" 
    controllerName="myapp.controller.MenuItemEventing"
    xmlns:t="sap.ui.table">
    <Dialog contentWidth="700px" horizontalScrolling="false" verticalScrolling="true" showHeader="false">
        <TabContainer
            id="attributiContainer" class="sapUiMediumMarginBottom">
            <items>    
                <TabContainerItem name="attributi">
                    <content>             
                        <HBox>
                            <VBox width="20%" class="sapUiMediumMargin">
                                <Select class="sapUiMediumMarginBottom" change="changeSKU">
                                    <core:Item key="formato" text="formato" />
                                </Select>
                                <Select class="sapUiMediumMarginBottom" change="changeSKU">
                                    <core:Item key="confezione" text="confezione" />
                                </Select>
                        
                                <Select class="sapUiMediumMarginBottom" change="changeSKU">
                                    <core:Item key="cliente" text="cliente" />
                                </Select>
                                
                                <Select class="sapUiMediumMarginTop" change="changeSKU">
                                    <core:Item key="SKU" text="SKU" />
                                </Select>
                            </VBox>
                            <VBox width="80%">
                                <wt:CustomTreeTable
                                    id="modificaAttributi_Table"
                                    rows="{path:'SKU>/attributi', parameters: {arrayNames:['attributi']}}"
                                    selectionMode="None"
                                    enableSelectAll="false"
                                    visibleRowCount="15"
                                    collapseRecursive="true">
                                    <wt:columns>
                                        <t:Column resizable="false">
                                            <Label text="ATTRIBUTI"/>
                                            <t:template>
                                                <wt:StyleTextTreeTableAttr text="{SKU>name}" diff="{SKU>expand}" discr="{SKU>value}" />
                                            </t:template>
                                        </t:Column>
                                        <t:Column resizable="false">
                                            <Label text="VALORE"/>
                                            <t:template>
                                                <HBox>
                                                    <wt:StyleTextTreeTableValue text="{SKU>value}" diff="{SKU>expand}" />
                                                </HBox>
                                            </t:template>
                                        </t:Column>
                                    </wt:columns>
                                </wt:CustomTreeTable>
                            </VBox>
                        </HBox>
                    </content>
                </TabContainerItem>
                <TabContainerItem name="parametri">                    
                    
                </TabContainerItem>                
            </items>
        </TabContainer> 
        <HBox>
            <VBox width="40%">
            <Button text="Annulla" width="100%" class="annullaButton" press="closeDialog"></Button>
            </VBox>
            <VBox width="20%"/>
            <VBox width="40%">
            <Button text="Conferma" width="100%" class="confermaButton"></Button>
            </VBox>
        </HBox>   
    </Dialog>

</core:FragmentDefinition>
