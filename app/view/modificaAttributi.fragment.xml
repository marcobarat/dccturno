<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:u="sap.ui.unified"
    xmlns:wt="myapp.control" 
    controllerName="myapp.controller.MenuItemEventing"
    xmlns:t="sap.ui.table">
    <Dialog contentWidth="1200px" contentHeight="600px" horizontalScrolling="false" verticalScrolling="true" showHeader="false" class="colorPage"  id="modificaAttributi">
        <TabContainer
            id="attributiContainer" class="sapUiMediumMarginBottom">
            <items>    
                <TabContainerItem name="attributi">
                    <content>             
                        <HBox>
                            <VBox width="20%" class="sapUiMediumMargin">
                                <ComboBox id="formato_SKU" class="sapUiMediumMarginBottom" loadItems="CaricaFormati" selectionChange="ResetConfezionamentiDialog">
                                </ComboBox>
                                <ComboBox id="confezione_SKU" class="sapUiMediumMarginBottom" loadItems="CaricaConfezionamenti" selectionChange="enableDestinazioni">
                                </ComboBox>                        
                                <ComboBox id="cliente_SKU" class="sapUiMediumMarginBottom" loadItems="CaricaDestinazioni" selectionChange="enableSKU">
                                </ComboBox>
<!--                                <ComboBox id="SKU" class="sapUiMediumMarginTop" loadItems="CaricaSKU" selectionChange="changeSKU">
                                </ComboBox>-->
                            </VBox>
                            <VBox width="80%">
                                <wt:CustomTreeTable
                                    id="modificaAttributi_Table"
                                    rows="{path:'SKU>/attributi', parameters: {arrayNames:['attributi']}}"
                                    selectionMode="None"
                                    enableSelectAll="false"
                                    visibleRowCount="15"
                                    collapseRecursive="true">
                                    <wt:columns>
                                        <t:Column resizable="false">
                                            <Label text="ATTRIBUTI"/>
                                            <t:template>
                                                <wt:StyleTextTreeTableAttr text="{SKU>name}" diff="{SKU>expand}" discr="{SKU>value}" />
                                            </t:template>
                                        </t:Column>
                                        <t:Column resizable="false">
                                            <Label text="VALORE"/>
                                            <t:template>
                                                <HBox>
                                                    <wt:StyleTextTreeTableValue text="{SKU>value}" diff="{SKU>expand}" />
                                                </HBox>
                                            </t:template>
                                        </t:Column>
                                    </wt:columns>
                                </wt:CustomTreeTable>
                            </VBox>
                        </HBox>
                    </content>
                </TabContainerItem>
                <TabContainerItem name="parametri">                    
                    
                </TabContainerItem>                
            </items>
        </TabContainer> 
        <HBox>
            <VBox width="40%">
            <Button text="Annulla" width="100%" class="annullaButton" press="destroyDialog"></Button>
            </VBox>
            <VBox width="20%"/>
            <VBox width="40%">
            <Button text="Conferma" width="100%" class="confermaButton" press="confermaModifiche"></Button>
            </VBox>
        </HBox>   
    </Dialog>

</core:FragmentDefinition>
