<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:u="sap.ui.unified"
    xmlns:t="sap.ui.table"
    controllerName="myapp.controller.guastiLinea">
    <Dialog horizontalScrolling="true" contentHeight="600px" contentWidth="1200px" verticalScrolling="true" showHeader="false" class="colorPage bordoBlu" id="statoLinea">
        <VBox height="100%">
            <!--            <VBox height="40px"/>
            <HBox id="statoLineaBox" height="30%">
                <VBox width="10%"/>
                <VBox width="80%">
                    <CheckBox
                        id="disponibile"
                        select="GestioneStato"
                        text="Disponibile per la produzione"
                        class="blueLabel"/>
                    <CheckBox
                        id="nondisponibile"
                        select="GestioneStato"
                        text="Non disponibile per la produzione"
                        class="blueLabel"/>
                </VBox>
                <VBox width="10%"/>
            </HBox>
            <VBox height="20px"/>
            <HBox height="300px">
                <VBox width="10%"/>
                <VBox width="1rem"/>
                <VBox id="nondisponibileBox" width="80%" height='' class="bordoBlu paddingleft">
                    <VBox height="33%" justifyContent="Center">
                        <Label text="Inizio Turno" class="blueLabel"/>
                        <TimePicker width="7rem" valueFormat="HH:mm" displayFormat="HH:mm" value="{orarioturno>/inizio}" id="inizio"></TimePicker>
                    </VBox>
                    <VBox height="33%" justifyContent="Center">
                        <Label text="Fine Turno" class="blueLabel"/>
                        <TimePicker width="7rem" valueFormat="HH:mm" displayFormat="HH:mm" value="{orarioturno>/fine}" id="fine"></TimePicker>
                    </VBox>
                    <VBox height="33%" justifyContent="Center">
                        <Label text="Causale" class="blueLabel"/>
                        <Select id="causale" items="{cause>/causali}" autoAdjustWidth="true">
                            <core:Item key="{cause>id}" text="{cause>fermo}" />
                        </Select>
                    </VBox>
                </VBox>
                <VBox width="10%"/>
            </HBox>
            <HBox height="5%">
                <VBox class="sapUiSmallMargin" width="48%">
                    <Button class="annullaButton lessOmbra" text="Annulla" width="100%" press="CloseDialog"/>
                </VBox>
                <VBox width="4%"/>
                <VBox class="sapUiSmallMargin" width="48%">
                    <Button class="confermaButton lessOmbra" text="Conferma" width="100%"/>
                </VBox>
            </HBox>-->
            <VBox height="35%">
                <t:Table
                    id="GuastiTable"
                    visibleRowCount="3"
                    class="alternate-color"
                    selectionMode="None"
                    rows="{fermiprogrammati>/fermiprogrammati}">
                    <t:columns>
                        <t:Column hAlign="Center" width="15%" resizable="false">
                            <Label text="Inizio"/>
                            <t:template>
                                <Text text="{fermiprogrammati>inizio}"/>
                            </t:template>
                        </t:Column>
                        <t:Column hAlign="Center" width="15%" resizable="false">
                            <Label text="Fine"/>
                            <t:template>
                                <Text text="{fermiprogrammati>fine}"/>
                            </t:template>
                        </t:Column>
                        <t:Column hAlign="Center" width="15%" resizable="false">
                            <Label text="Tempo"/>
                            <t:template>
                                <Text text="{fermiprogrammati>intervallo}"/>
                            </t:template>
                        </t:Column>
                        <t:Column hAlign="Center" width="45%" resizable="false">
                            <Label text="Causale"/>
                            <t:template>
                                <Text text="{fermiprogrammati>causale}"/>
                            </t:template>
                        </t:Column>
                        <t:Column hAlign="Center" width="10%" resizable="false">
                            <t:template>
                                <Button/>
                            </t:template>
                        </t:Column>
                    </t:columns>
                    <t:noData>
                        <Text class="sapUiTableCtrlEmptyMsg" text="Non ci sono fermi programmati per la linea" textAlign="Center"/>
                    </t:noData>
                </t:Table>
            </VBox>
            <VBox id="nondisponibileBox" height="40%" alignItems="Center">
                <VBox height="33%" justifyContent="Center" alignItems="Center">
                    <Label text="Inizio Turno" class="blueLabel"/>
                    <TimePicker width="7rem" valueFormat="HH:mm" displayFormat="HH:mm" value="{orarioturno>/inizio}" id="inizio"></TimePicker>
                </VBox>
                <VBox height="33%" justifyContent="Center" alignItems="Center">
                    <Label text="Fine Turno" class="blueLabel"/>
                    <TimePicker width="7rem" valueFormat="HH:mm" displayFormat="HH:mm" value="{orarioturno>/fine}" id="fine"></TimePicker>
                </VBox>
                <VBox height="33%" justifyContent="Center" alignItems="Center">
                    <Label text="Causale" class="blueLabel"/>
                    <Select id="causale" items="{cause>/causali}" autoAdjustWidth="true">
                        <core:Item key="{cause>id}" text="{cause>fermo}" />
                    </Select>
                </VBox>                
            </VBox>
            <HBox height="15%">
                <VBox width="33%"/>
                <VBox width="34%" justifyContent="Center">
                    <Button width="100%" text="Conferma" class="chiudiButton"/>
                </VBox>
                <VBox width="33%"/>
            </HBox>
            <HBox height="10%">
                <VBox width="10%"/>
                <VBox width="35%">
                    <Button width="100%" text="Riavvio" class="allarmeButton"/>
                </VBox>
                <VBox width="10%"/>
                <VBox width="35%">
                    <Button width="100%" press="onCloseDialog" text="Esci" class="chiudiButton"/>
                </VBox>
                <VBox width="10%"/>
            </HBox>
        </VBox>
    </Dialog>

</core:FragmentDefinition>