<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:u="sap.ui.unified"
    xmlns:t="sap.ui.table"
    controllerName="myapp.controller.guastiLinea">
    <Dialog horizontalScrolling="true" contentHeight="500px" contentWidth="800px" verticalScrolling="true" showHeader="false" class="colorPage bordoBlu" id="statoLinea">
        <VBox height="100%">
            <VBox height="275px">
                <t:Table
                    width="100%"
                    enableColumnReordering="true"
                    id="FermiProgrammatiTable"
                    visibleRowCount="3"
                    class="alternate-color"
                    selectionMode="None"
                    rows="{fermiprogrammati>/nondisponibilita}">
                    <t:columns>
                        <t:Column hAlign="Center" width="15%" resizable="false">
                            <Label text="Inizio"/>
                            <t:template>
                                <Text text="{fermiprogrammati>inizio}"/>
                            </t:template>
                        </t:Column>
                        <t:Column hAlign="Center" width="15%" resizable="false">
                            <Label text="Fine"/>
                            <t:template>
                                <Text text="{fermiprogrammati>fine}"/>
                            </t:template>
                        </t:Column>
                        <t:Column hAlign="Center" width="15%" resizable="false">
                            <Label text="Tempo"/>
                            <t:template>
                                <Text text="{fermiprogrammati>intervallo}"/>
                            </t:template>
                        </t:Column>
                        <t:Column hAlign="Center" width="45%" resizable="false">
                            <Label text="Causale"/>
                            <t:template>
                                <Text text="{fermiprogrammati>causale}"/>
                            </t:template>
                        </t:Column>
                        <t:Column hAlign="Center" width="10%" resizable="false">
                            <t:template>
                                <Button text="Delete" press="CancellaFermoProgrammato" enabled="{= ${fermiprogrammati>isAttivo} === '0' ? true : false}"/>
                            </t:template>
                        </t:Column>
                    </t:columns>
                    <t:noData>
                        <Text class="sapUiTableCtrlEmptyMsg" text="Non ci sono fermi programmati per la linea" textAlign="Center"/>
                    </t:noData>
                </t:Table>
            </VBox>
            <VBox id="nondisponibileBox" height="150px" width="100%" alignItems="Center">
                <HBox width="100%" height="100%">
                    <VBox width="3%"/>
                    <VBox width="15%">
                        <Label text="Inizio Turno" class="blueLabel"/>
                        <TimePicker width="7rem" valueFormat="HH:mm" displayFormat="HH:mm" value="{orarioturno>/inizio}" id="inizio"></TimePicker>
                    </VBox>
                    <VBox width="2%"/>
                    <VBox width="15%">
                        <Label text="Fine Turno" class="blueLabel"/>
                        <TimePicker width="7rem" valueFormat="HH:mm" displayFormat="HH:mm" value="{orarioturno>/fine}" id="fine"></TimePicker>
                    </VBox>
                    <VBox width="2%"/>
                    <VBox width="35%">
                        <Label text="Causale" class="blueLabel"/>
                        <ComboBox id="causale" loadItems="CaricaCausaliDisponibilita"/>
                    </VBox>
                    <VBox width="5%"/>
                    <VBox width="17%">
                        <Button width="100%" text="Inserisci" press="InserisciFermoProgrammato" class="chiudiButtonStatoLinea"/>
                    </VBox>
                    <VBox width="6%"/>
                </HBox>                
            </VBox>
            <VBox height="75px">
                <HBox>
                    <VBox width="10%"/>
                    <VBox width="35%">
                        <Button width="100%" press="DestroyDialog" text="Chiudi" class="chiudiButton"/>   
                    </VBox>
                    <VBox width="10%"/>
                    <VBox width="35%">
                        <Button id="RiavviaSubito" width="100%" text="Riavvia subito" class="allarmeButton" enabled="false" press="RiavviamentoLinea"/>
                    </VBox>
                    <VBox width="10%"/>
                </HBox>
            </VBox>
        </VBox>
    </Dialog>
</core:FragmentDefinition>