<core:FragmentDefinition
    id="modificaGuasti"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:u="sap.ui.unified"
    controllerName="myapp.controller.guastiLinea">
    <Dialog contentWidth="600px" horizontalScrolling="false" verticalScrolling="false">
        <customHeader>
            <Bar>
                <contentLeft>

                </contentLeft>
                <contentMiddle>
                    <Title id="title"/>
                </contentMiddle>
                <contentRight>
                    <Button icon="sap-icon://decline" press="onClose">
                    </Button>
                </contentRight>
            </Bar>
        </customHeader>        
        <VBox width="100%" height="100%">
            <VBox id="topBox" height="25%" class="sapUiSmallMargin">
                <VBox height="50%">                      
                </VBox>
                <VBox height="50%" class="sapUiSmallMargin">
                </VBox>
            </VBox>
            <VBox id="centralBox" height="50%">
            </VBox>
            <VBox id="bottomBox" height="25%" class="sapUiSmallMargin">
                <VBox height="50%">
                </VBox>
                <VBox height="50%" class="sapUiSmallMargin">
                </VBox>                
            </VBox>
        </VBox>
        <Button width="100%" text="Conferma" press="onConfermaCambio" id="confermaModificheButton"/>
    </Dialog>

</core:FragmentDefinition>