<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:c="sap.ui.commons" xmlns="sap.m"
          xmlns:l="sap.ui.layout" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:t="sap.ui.table"
          xmlns:u="sap.ui.unified" xmlns:comp="myapp.component" xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
          xmlns:wt="myapp.control"
          controllerName="myapp.controller.Main">
    <Page id="myPage" showHeader="false" class="colorPage" enableScrolling="false">
        <content>
            <VBox height="40%" width="100%">
                <HBox>
                    <VBox height="100%" width="25%">
                        <Image src="img/dececco_marchio_standard_rgb.png" class="Logo"/>
                    </VBox>
                    <VBox height="100%" width="75%">
                        <Text text="Fara San Martino - Reparto Confezionamento" class="customTextTitle"/>   
                    </VBox>
                </HBox>
            </VBox>
            <VBox height="50%" width="100%">
                <HBox>
                    <VBox height="100%" width="25%"/>
                    <VBox height="100%" width="30%">
                        <!--                        <TileContainer
                            tiles="{/linee}">
                            <StandardTile
                                idz="{idlinea}"
                                icon="{icon}"
                                type="{type}"
                                title="{linea}"
                                number="{linea_desc}"
                                info="{info}"
                                infoState="{infoState}"
                                press="GoToOperatore"/>
                        </TileContainer>-->
                        <GenericTile header="Piani di Confezionamento" press="onToPianiPage" class="tileSize bordoBlu tileTitle blue">
                            <tileContent>
                                <TileContent>
                                    <content>
                                        <ImageContent src="sap-icon://machine" />
                                    </content>
                                </TileContent>
                            </tileContent>
                        </GenericTile>
                    </VBox>
                    <VBox height="100%" width="30%">
                        <GenericTile header="Sinottici" press="onSinotticiPage" class="tileSize bordoRosso tileTitle red">
                            <tileContent>
                                <TileContent>
                                    <content>
                                        <ImageContent src="sap-icon://org-chart" />
                                    </content>
                                </TileContent>
                            </tileContent>
                        </GenericTile>
                    </VBox>
                    <VBox height="100%" width="15%"/>
                </HBox>
            </VBox>
            <VBox height="10%" width="100%"/>
        </content>
    </Page>
</mvc:View>