<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:c="sap.ui.commons" xmlns="sap.m"
          xmlns:l="sap.ui.layout" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:t="sap.ui.table"
          xmlns:u="sap.ui.unified" xmlns:comp="myapp.component" xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
          xmlns:wt="myapp.control"
          controllerName="myapp.controller.Main">
    <Page id="myPage" showHeader="false" class="colorPage" enableScrolling="false">
        <content>
            <VBox height="100%" width="100%">
                <VBox height="10pt"/>
<!--                <VBox height="4%"/>-->
                <VBox height="40%" width="100%">
                    <HBox>
                        <VBox height="100%" width="20%">
                            <Image src="img/dececco_marchio_standard_rgb.png" class="Logo"/>
                        </VBox>
                        <VBox height="100%" width="60%" alignItems="Center">
                            <Text text="Fara San Martino - Reparto Confezionamento" class="customTextTitle"/>   
                        </VBox>
                        <VBox height="100%" width="20%"/>
                    </HBox>
                </VBox>
                <VBox height="50%" width="100%">
                    <HBox>
                        <VBox height="100%" width="20%"/>
                        <VBox height="100%" width="30%" alignItems="Center">
                            <GenericTile header="Piani di Confezionamento" press="onToPianiPage" class="tileSize bordoBlu tileTitle tileBlue tileTitleHoverBlue">
                                <tileContent>
                                    <TileContent class="absoluteTileContentPosition">
                                        <content>
                                            <ImageContent class="iconWhite" src="sap-icon://machine" />
                                        </content>
                                    </TileContent>
                                </tileContent>
                            </GenericTile>
                        </VBox>
                        <VBox height="100%" width="30%" alignItems="Center">
                            <GenericTile header="Sinottici" press="onSinotticiPage" class="tileSize bordoRosso tileTitle tileRed tileTitleHoverRed">
                                <tileContent>
                                    <TileContent class="absoluteTileContentPosition">
                                        <content>
                                            <ImageContent class="iconWhite" src="sap-icon://org-chart" />
                                        </content>
                                    </TileContent>
                                </tileContent>
                            </GenericTile>
                        </VBox>
                        <VBox height="100%" width="20%"/>
                    </HBox>
                </VBox>
                <VBox height="10%" width="100%"/>
            </VBox>
        </content>
    </Page>
</mvc:View>