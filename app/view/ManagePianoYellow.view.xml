<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:c="sap.ui.commons" xmlns="sap.m"
          xmlns:l="sap.ui.layout" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:t="sap.ui.table"
          xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
          xmlns:cus="myapp.control"
          controllerName="myapp.controller.ManagePianoYellow">
    <Page id="managePianoYellow" class="colorPage" showHeader="false">
        <content>
            <VBox height="100%" width="100%">
                <VBox height="4%" width="100%"/>
                <VBox height="6%" width="100%">
                    <HBox>
                        <VBox height="100%" width="6.2%"/>
                        <VBox height="100%" width="13.8%"/>
                        <VBox height="100%" width="10%"/>
                        <VBox height="100%" width="40%">
                            <VBox alignItems="Center" height="50%" width="100%">
                                <Text id="Title"/>
                            </VBox>
                        </VBox>
                        <VBox height="100%" width="10%"/>
                        <VBox height="100%" width="13.8%">
                            <Button text="Esci" press="BackToPiani" width="100%" class="noFocus" />
                        </VBox>
                        <VBox height="100%" width="6.2%"/>
                    </HBox>
                </VBox>
                <VBox height="90%" width="100%">
                    <HBox>
                        <VBox height="100%" width="5%"/>
                        <VBox height="100%" width="90%">
                            <IconTabBar
                                id="ManageIconTabBar"
                                select="ChangeReparto"
                                applyContentPadding="true"
                                expandable="false"
                                items="{reparti>/ListaReparti}"
                                selectedKey="1">
                                <items>
                                    <IconTabFilter
                                        text="{reparti>Reparto}"
                                        key="{reparti>RepartoID}">
                                    </IconTabFilter>                  
                                </items>
                                <content>
                                    <Table inset="false" items="{path: 'linea>/linee'}" id="managePianoTable">
                                        <columns>
                                            <Column width="12em"/>
                                        </columns>
                                        <items>
                                            <ColumnListItem class="noDelimitator">
                                                <cells>
                                                    <VBox width="100%" height="100%" class="sfondobianco">
                                                        <HBox>
                                                            <VBox width="20%" height="100%">
                                                                <VBox>
                                                                    <VBox width="100%" height="20%" class="bordoBluL bordoBluR bordoBluT bordoBluB">
                                                                        <Button text="{linea>linea}" class="noFocus buttonDimension" press="ShowStatoLinea" width="100%"/>
                                                                    </VBox >
                                                                    <VBox width="100%" height="80%" class="bordoBluL bordoBluB bordoBluR">
                                                                        <VBox width="100%" height="30%">
                                                                            <Table 
                                                                                showNoData="false"
                                                                                class="mysapMListTblNoBorders sapMListTblHeader_b">
                                                                                <columns>
                                                                                    <Column  hAlign="Center">
                                                                                        <Text text="Operatori"/>
                                                                                    </Column>
                                                                                </columns>
                                                                            </Table>
                                                                        </VBox>
                                                                        <VBox width="100%" height="70%">
                                                                            <ScrollContainer vertical='true' height="155px">  
                                                                                <Table 
                                                                                    items="{path: 'linea>operatori'}"
                                                                                    inset="false"
                                                                                    growing="true"
                                                                                    fixedLayout="false"
                                                                                    class="sapUiSmallMarginEnd mysapMListTblNoBorders ">
                                                                                    <columns>
                                                                                        <Column  hAlign="Center">
                                                                                        </Column>
                                                                                    </columns>
                                                                                    <items>
                                                                                        <ColumnListItem class="noDelimitator sapMListTblCell_b sapMListTblCell_op">
                                                                                            <cells>
                                                                                                <ComboBox width="90%" value="{= ${linea>nome} === '---' ? '' : ${linea>cognome} + ' ' + ${linea>nome} }" placeholder="{= ${linea>nome} === '---' ? ${linea>sezione}: ''}" loadItems="LoadOperatori" selectionChange="CheckOperatore"/>
                                                                                            </cells>
                                                                                        </ColumnListItem>
                                                                                    </items>
                                                                                </Table>      
                                                                            </ScrollContainer> 
                                                                        </VBox>
                                                                    </VBox>
                                                                </VBox>
                                                            </VBox>
                                                            <VBox width="80%" height="100%">
                                                                <VBox>
                                                                    <VBox height="20%" width="100%">
                                                                        <HBox>
                                                                            <VBox height="100%" width="92%"/>
                                                                            <VBox height="100%" width="8%" class="bordoBluL bordoBluR bordoBluT">
                                                                                <Button icon="sap-icon://add" press="AddBatch" width="100%" class="AddButton"/>
                                                                            </VBox>
                                                                        </HBox>
                                                                    </VBox>
                                                                    <VBox height="80%" width="100%" class="bordoBluR bordoBluB bordoBluT styleVBoxbottom">
                                                                        <Table
                                                                            showNoData="false"
                                                                            inset="false"
                                                                            growing="true"
                                                                            fixedLayout="false"
                                                                            growingThreshold="2"
                                                                            class="sapUiSmallMarginEnd mysapMListTblNoBorders sapMListTblHeader_b scrollingbar">
                                                                            <columns>
                                                                                <Column width="5%" hAlign="Center">
                                                                                    <Text text="" />
                                                                                </Column>
                                                                                <Column width="10%" hAlign="Center">
                                                                                    <Text text="Sequenza" />
                                                                                </Column>
                                                                                <Column width="20%" hAlign="Center">
                                                                                    <Text text="Formato" />
                                                                                </Column>
                                                                                <Column width="15%" hAlign="Center">
                                                                                    <Text text="Confezionamento" />
                                                                                </Column>
                                                                                <Column width="15%">
                                                                                    <Text text="" />
                                                                                </Column>
                                                                                <Column width="10%" hAlign="Center">
                                                                                    <Text text="Qli" />
                                                                                </Column>
                                                                                <Column width="10%" hAlign="Center">
                                                                                    <Text text="Cartoni" />
                                                                                </Column>
                                                                                <Column hAlign="Center">
                                                                                    <Text text="Ore" />
                                                                                </Column>
                                                                                <Column width="5%" hAlign="Center">
                                                                                    <Text/>
                                                                                </Column>
                                                                            </columns>
                                                                        </Table>
                                                                        <ScrollContainer vertical='true' height="155px" class="scrollingbar">
                                                                            <Table class="mysapMLIBShowSeparator mysapMListNoBorders1 mysapMListNoBorders2" 
                                                                                   width="100%" 
                                                                                   items="{path: 'linea>batchlist', templateShareable:false}">
                                                                                <columns>
                                                                                    <Column width="6%" vAlign="Middle" hAlign="Center"/>
                                                                                    <Column width="20%" vAlign="Middle" hAlign="Center"/>
                                                                                    <Column width="14%" vAlign="Middle" hAlign="Center"/>
                                                                                    <Column width="28%" vAlign="Middle" hAlign="Center"/>
                                                                                    <Column width="7%" vAlign="Middle" hAlign="Center"/>
                                                                                    <Column width="7%" vAlign="Middle" hAlign="Center"/>
                                                                                    <Column width="9%" vAlign="Middle" hAlign="Center"/>
                                                                                    <Column width="8%" vAlign="Middle" hAlign="Center"/>
                                                                                </columns>
                                                                                <items>
                                                                                    <ColumnListItem class="noDelimitator sapMListTblCell_b" height="90%">
                                                                                        <cells>
                                                                                            <Input textAlign="Center" value="{linea>sequenza}" liveChange="ShowUpdateButton" visible="{= ${linea>statoBatch} === '#ADD#' ? false : true}" enabled="{= ${linea>statoBatch} === 'In lavorazione' ? false : true}"/>
                                                                                            <ComboBox value="{linea>formatoProduttivo}" width="100%" loadItems="CaricaFormati" selectionChange="ResetConfezionamenti" visible="{= ${linea>statoBatch} === '#ADD#' ? false : true}"  enabled="{= ${linea>statoBatch} === 'In lavorazione' ? false : true}"/>
                                                                                            <ComboBox value="{linea>confezioneCodiceInterno}" loadItems="CaricaConfezionamenti" selectionChange="LoadDestinazione" visible="{= ${linea>statoBatch} === '#ADD#' ? false : true}" enabled="{= ${linea>statoBatch} === 'In lavorazione' ? false : true}"/>
                                                                                            <Button width="90%" text="{linea>destinazione}" press="ShowBatchDetails" visible="{= ${linea>statoBatch} === '#ADD#' ? false : true}" enabled="{= ${linea>statoBatch} === 'In lavorazione' ? false : true}"/>
                                                                                            <Input textAlign="Center" value="{linea>qli}" liveChange="ChangeValues" visible="{= ${linea>statoBatch} === '#ADD#' ? false : true}" enabled="{= ${linea>statoBatch} === 'In lavorazione' ? false : true}"/>
                                                                                            <Input textAlign="Center" value="{linea>cartoni}" liveChange="ChangeValues" visible="{= ${linea>statoBatch} === '#ADD#' ? false : true}" enabled="{= ${linea>statoBatch} === 'In lavorazione' ? false : true}"/>
                                                                                            <TimePicker class="TimesapMInputBase" value="{linea>ore}" valueFormat="HH:mm" displayFormat="HH:mm" change="ChangeValues" visible="{= ${linea>statoBatch} === '#ADD#' ? false : true}" enabled="{= ${linea>statoBatch} === 'In lavorazione' ? false : true}"/>
                                                                                            <VBox height="100%" width="100%">
                                                                                                <HBox height="100%" width="100%">
                                                                                                    <VBox height="100%" width="100%">
                                                                                                        <Button icon="sap-icon://action-settings" press="BatchSettings" width="100%" visible="{= ${linea>showButton} === 0 ? false : true}"/>
                                                                                                        <HBox>
                                                                                                            <VBox height="100%" width="50%">
                                                                                                                <Button icon="sap-icon://accept" class="StileV" press="InsertNewBatch" width="50%" visible="{= ${linea>showButton} === 0 ? true : false}"/>
                                                                                                            </VBox>
                                                                                                            <VBox height="100%" width="50%">
                                                                                                                <Button icon="sap-icon://decline" class="StileX" press="UndoBatchCreation" width="50%" visible="{= ${linea>showButton} === 0 ? true : false}"/>
                                                                                                            </VBox>
                                                                                                        </HBox>
                                                                                                    </VBox>
                                                                                                </HBox>
                                                                                            </VBox>
                                                                                        </cells>
                                                                                    </ColumnListItem>
                                                                                </items>                                                                                                                                
                                                                            </Table>
                                                                        </ScrollContainer>  
                                                                    </VBox>
                                                                </VBox> 
                                                            </VBox>      
                                                        </HBox>
                                                    </VBox>
                                                </cells>
                                            </ColumnListItem>
                                        </items>
                                    </Table>
                                </content>  
                            </IconTabBar>   
                        </VBox>
                        <VBox height="100%" width="5%"/> 
                    </HBox>
                </VBox>
            </VBox>
        </content>
    </Page>
</mvc:View>